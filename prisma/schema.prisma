generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Bagian atas (generator dan datasource) tetap tidak diubah

// ===================================
// START: MODEL DATA UTAMA (WAJIB DITAMBAH)
// ===================================

model User {
  id              Int      @id @default(autoincrement()) 
  email           String   @unique 
  password        String   
  fullName        String
  phone           String
  shopeeAccount   String
  address         String
  createdAt       DateTime @default(now())

  // Relasi: Setiap User punya banyak Todos
  todos           Todo[] 
}

model Todo {
  id              Int      @id @default(autoincrement())
  userId          Int
  title           String
  description     String?  
  isCompleted     Boolean  @default(false)
  createdAt       DateTime @default(now())
  
  // Relasi: Menghubungkan ke tabel User
  user            User     @relation(fields: [userId], references: [id])
}
// ===================================
// END: MODEL DATA UTAMA
// ===================================